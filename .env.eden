# Eden Multi-Instrument Trading System - Environment Variables

# Instrument Pool (NO FOREX - Only Synthetics + Gold)
INSTRUMENT_POOL="VIX75,VIX100,VIX50,VIX25,StepIndex,Boom1000,Crash1000,Boom500,Crash500,XAUUSD"

# Data Configuration
DATA_PROVIDER="MetaTrader5"
DATA_DIR="data"
CONFIG_DIR="configs/instruments"
BACKTEST_DIR="backtests"
REPORT_DIR="reports"

# Optimization Settings
PARALLEL_WORKERS=8
OPTUNA_TRIALS_INITIAL=80
OPTUNA_TRIALS_FULL=300
SEED=42

# Git Configuration
GIT_TAG_PREFIX="eden/multi-instrument-profitable-"

# Trading Parameters
MAX_DAILY_RISK_PCT=2.0
MAX_CONCURRENT_TRADES=2
TIMEFRAMES="M1,M5,15M,1H,4H"

# ML Configuration
ML_MODEL="XGBoost"
ML_ROLLING_WINDOW="30D"
ML_PREDICTION_HORIZON="5M"

# Risk Management
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_RATIO=2.0
