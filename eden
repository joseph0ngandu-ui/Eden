#!/usr/bin/env python3
"""
Eden Command Wrapper
Provides the 'eden' command interface
"""
import sys
import subprocess
from pathlib import Path

def main():
    """Main eden command entry point"""
    # Get the directory where this script is located
    script_dir = Path(__file__).parent.absolute()
    
    # Path to the actual runner
    runner_path = script_dir / "eden_runner.py"
    
    # Pass all arguments to the runner
    cmd = [sys.executable, str(runner_path)] + sys.argv[1:]
    
    # Execute the runner
    try:
        result = subprocess.run(cmd, check=False)
        sys.exit(result.returncode)
    except KeyboardInterrupt:
        print("\nOperation cancelled by user")
        sys.exit(1)
    except Exception as e:
        print(f"Error: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()