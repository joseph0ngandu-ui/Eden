{
  "symbol": "XAUUSD",
  "description": "Eden multi-instrument config for XAUUSD",
  "data": {
    "resolution": "1m",
    "source": "MetaTrader5",
    "fallback_source": "historical_cache"
  },
  "risk": {
    "max_daily_risk_pct": 2.0,
    "max_concurrent_trades": 2,
    "stop_loss_pct": 2.0,
    "take_profit_ratio": 2.0
  },
  "strategies": {
    "breakout_volume": {
      "method": "BreakoutVolume",
      "description": "Gold Breakout - volume confirmation",
      "entry_model": "enter on breakout candle above resistance/below support confirmed by 50% volume spike, ICT trend alignment required",
      "timeframe": "15m",
      "stop_loss_at_swing": true,
      "take_profit_risk_ratio": 2.0,
      "optimize_params": [
        "stop_distance",
        "take_profit_ratio"
      ],
      "risk_per_trade_pct": 1.0
    },
    "false_breakout": {
      "method": "FalseBreakoutMR",
      "description": "Gold Mean Reversion - fake breakout entry",
      "entry_model": "enter on reversal candle closing back within previous day range after fake breakout, ICT FVG confirmation optional",
      "timeframe": "5m",
      "stop_loss": 1.5,
      "take_profit": 1.0,
      "exit_end_of_day": true,
      "optimize_params": [
        "stop_distance",
        "take_profit_ratio"
      ],
      "risk_per_trade_pct": 0.8
    },
    "ema_trend": {
      "method": "EMA_Crossover",
      "description": "Gold Trend - EMA crossover with RSI",
      "entry_model": "enter long when 20EMA crosses above 50EMA and RSI>50, short when opposite, ICT HTF trend filter applies",
      "fast_period": 20,
      "slow_period": 50,
      "trend_filter": "RSI14",
      "stop_loss_at_ATR": true,
      "risk_per_trade_pct": 1.0,
      "optimize_params": [
        "fast_period",
        "slow_period",
        "risk_per_trade_pct"
      ]
    },
    "bollinger_rsi": {
      "method": "BollingerRSI",
      "description": "Gold Reversion - Bollinger + RSI divergence",
      "entry_model": "enter when price touches upper/lower Bollinger and RSI divergence confirmed, ICT FVG trend alignment optional",
      "BB_period": 20,
      "BB_std": 2,
      "RSI_period": 14,
      "divergence_filter": true,
      "stop_loss_at_band": true,
      "optimize_params": [
        "BB_period",
        "BB_std",
        "RSI_period"
      ],
      "risk_per_trade_pct": 0.9
    },
    "ML_Adaptive": {
      "method": "ML_Adaptive",
      "description": "Machine Learning - adaptive prediction model",
      "entry_model": "generate signal from model prediction with ICT features, ATR-based stop, predicted target for take profit",
      "features": [
        "price",
        "volume",
        "ATR",
        "HTF_bias",
        "liquidity_nodes",
        "FVGs"
      ],
      "model": "XGBoost",
      "rolling_window": "30D",
      "prediction_horizon": "5M",
      "risk_per_trade_pct": 0.5,
      "stop_loss": "ML_predicted_ATR",
      "take_profit": "ML_predicted_target",
      "enable_pruning": true,
      "optimize_params": [
        "model_hyperparameters",
        "risk_per_trade_pct"
      ],
      "hyperparameters": {
        "max_depth": 6,
        "learning_rate": 0.1,
        "n_estimators": 100,
        "subsample": 0.8,
        "colsample_bytree": 0.8
      }
    }
  },
  "instrument_type": "commodity"
}